RewriteEngine On

# Ensure the request is not for an existing file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route all API requests to their respective subfolder's index.php
RewriteRule ^api/([^/]+)/?$ api/$1/index.php [L,QSA]

# Enable CORS (Fixes frontend access issues)
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Origin, Accept, Content-Type, X-Requested-With"
</IfModule>
